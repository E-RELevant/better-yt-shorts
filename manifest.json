{
    "name": "Better YouTube Shorts",
    "description": "Playback controls (with J and L) and timestamp on YouTube Shorts.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/shorts/*"],
            "js": ["content-script.js"],
            "css": ["styles.css"]
        }
    ],
    "icons": {
        "16": "icons/byts16.png",
        "32": "icons/byts32.png",
        "48": "icons/byts48.png",
        "128": "icons/byts128.png"
    }
}